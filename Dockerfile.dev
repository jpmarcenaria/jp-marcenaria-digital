# Dockerfile para Desenvolvimento - JP Marcenaria Digital
FROM node:20-alpine

# Instalar dependências do sistema
RUN apk add --no-cache \
    git \
    curl \
    bash \
    libc6-compat

# Definir diretório de trabalho
WORKDIR /app

# Instalar pnpm para melhor performance
RUN npm install -g pnpm

# Copiar arquivos de dependências
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# Instalar dependências
RUN pnpm install

# Copiar código fonte
COPY . .

# Expor portas
EXPOSE 5173 24678

# Comando padrão
CMD ["pnpm", "dev", "--host", "0.0.0.0"]